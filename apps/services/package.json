{
  "name": "@worklist/services",
  "version": "0.1.0",
  "description": "Worklist services",
  "type": "module",
  "main": "dist/server.js",
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "typescript": "./src/server.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prebuild": "run-p lint clean:outputs",
    "build": "tsc -p ./tsconfig.json",
    "clean": "rm -rf .turbo node_modules",
    "clean:outputs": "rimraf ./dist",
    "dev": "run-p dev:start typecheck",
    "dev:start": "tsx watch --inspect --env-file=.env src/server.ts",
    "lint": "biome lint ./src",
    "format": "biome format ./src",
    "start": "node --env-file=.env --enable-source-maps dist/server.js",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "migration:create": "NODE_OPTIONS='--import tsx' mikro-orm migration:create --config ./src/model/orm.config.ts -- --env-file=.env",
    "migration:reset": "NODE_OPTIONS='--import tsx' mikro-orm migration:fresh --config ./src/model/orm.config.ts --seed -- --env-file=.env",
    "migration:apply": "NODE_OPTIONS='--import tsx' mikro-orm migration:up --config ./src/model/orm.config.ts -- --env-file=.env",
    "schema:fresh": "NODE_OPTIONS='--import tsx' mikro-orm schema:fresh --run --config ./src/model/orm.config.ts -- --env-file=.env",
    "test": "NODE_OPTIONS='--import tsx' vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@mikro-orm/cli": "6.4.16",
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.15.24",
    "esbuild": "^0.25.5",
    "fastify-tsconfig": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsc-files": "^1.1.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.0"
  },
  "dependencies": {
    "@fastify/auth": "^5.0.2",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@mikro-orm/core": "^6.4.16",
    "@mikro-orm/migrations": "^6.4.16",
    "@mikro-orm/postgresql": "^6.4.16",
    "@mikro-orm/reflection": "^6.4.16",
    "@mikro-orm/seeder": "^6.4.16",
    "@t3-oss/env-core": "^0.13.6",
    "arecibo": "^4.0.2",
    "close-with-grace": "^2.2.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "figlet": "^1.8.1",
    "nanoid": "^5.1.5",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^3.25.49",
    "zod-to-json-schema": "^3.24.5"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/model/orm.config.ts",
      "./dist/model/orm.config.js"
    ]
  }
}
